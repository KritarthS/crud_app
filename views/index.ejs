<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (task.length > 0) { %>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col-lg-1">ID</th>
                        <th scope="col-lg-3">Task</th>
                        <th scope="col-lg-3">Deadline</th>
                        <th scope="col-lg-3">Importance</th>
                        <th scope="col-lg-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% task.forEach((task, index) => { %>
                        <tr>
                            <th scope="row"><%= task.id %></th>
                            <td><%= task.task %></td>
                            <td><%= task.deadline %></td>
                            <td><%= task.importance %></td>
                            
                            <td>
                                <a href="/edit/<%= task.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No task found. Go <a href="/add" >here</a> to add task.</p>
        <% } %>
    </div>
</div>
</body>
</html>
