<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (task) { %>
        <form class="add-task-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <input type="text" class="form-control" name="task" id="first-name" placeholder="Task Name" required>
                </div>
                <div class="form-group col-md-3">
                    <input type="date" class="form-control" name="deadline" id="last-name" placeholder="Due Date" required>
                </div>
            </div>
            <div class="form-row">
                
                <div class="form-group col-md-6">
                    <select id="position" name="importance" class="form-control" required>
                        <option selected disabled>Choose importance</option>
                        <option>Low</option>
                        <option>Medium</option>
                        <option>High</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-left">Update Task</button>
        </form>
    <% } else { %>
        <p class="text-center">task Not Found. Go <a href="/add">here</a> to add task.</p>
    <% } %>
</div>
</div>
</body>
</html>
